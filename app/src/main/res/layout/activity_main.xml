<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/main_activity_btn_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="12dp"
        android:text="@string/error" />

    <Button
        android:id="@+id/main_activity_btn_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/main_activity_btn_error"
        android:layout_marginHorizontal="12dp"
        android:text="@string/info" />

    <Button
        android:id="@+id/main_activity_btn_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/main_activity_btn_info"
        android:layout_marginHorizontal="12dp"
        android:text="@string/success" />
</RelativeLayout>